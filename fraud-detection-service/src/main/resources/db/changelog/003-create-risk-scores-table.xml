<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-risk-scores-table" author="claude">
        <createTable tableName="risk_scores">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="account_number" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="current_score" type="INTEGER" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="risk_level" type="VARCHAR(20)" defaultValue="LOW">
                <constraints nullable="false"/>
            </column>
            <column name="total_checks" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="flagged_count" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="blocked_count" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="last_check_at" type="TIMESTAMP"/>
            <column name="last_incident_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>

        <createIndex tableName="risk_scores" indexName="idx_account_number_unique" unique="true">
            <column name="account_number"/>
        </createIndex>
        <createIndex tableName="risk_scores" indexName="idx_risk_level_score">
            <column name="risk_level"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
