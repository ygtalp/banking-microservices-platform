<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-user-preferences-table" author="notification-service">
        <createTable tableName="user_preferences">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- User Identification -->
            <column name="user_id" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>

            <!-- Contact Information -->
            <column name="email" type="VARCHAR(255)"/>
            <column name="phone_number" type="VARCHAR(20)"/>
            <column name="device_token" type="VARCHAR(500)"/>

            <!-- Channel Preferences -->
            <column name="email_enabled" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="sms_enabled" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="push_enabled" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="in_app_enabled" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>

            <!-- Notification Type Preferences -->
            <column name="account_notifications" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="transfer_notifications" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="security_notifications" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="marketing_notifications" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>

            <!-- Localization -->
            <column name="language" type="VARCHAR(10)" defaultValue="en"/>
            <column name="timezone" type="VARCHAR(50)" defaultValue="UTC"/>

            <!-- Audit Fields -->
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>

        <!-- Indexes for Performance -->
        <createIndex tableName="user_preferences" indexName="idx_user_preference_user_id" unique="true">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
