<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="007-add-mfa-to-users" author="claude">
        <!-- Add MFA enabled flag -->
        <addColumn tableName="users">
            <column name="mfa_enabled" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <!-- Add preferred MFA method -->
        <addColumn tableName="users">
            <column name="preferred_mfa_method" type="VARCHAR(20)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <!-- Add index for MFA enabled users -->
        <createIndex tableName="users" indexName="idx_mfa_enabled">
            <column name="mfa_enabled"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
