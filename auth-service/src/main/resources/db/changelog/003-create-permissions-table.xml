<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-permissions-table" author="banking-platform">
        <createTable tableName="permissions">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="resource" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="action" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="VARCHAR(255)"/>

            <!-- Audit Fields -->
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Unique constraint on resource + action combination -->
        <addUniqueConstraint
                tableName="permissions"
                columnNames="resource, action"
                constraintName="uk_resource_action"/>

        <!-- Indexes -->
        <createIndex tableName="permissions" indexName="idx_resource">
            <column name="resource"/>
        </createIndex>

        <createIndex tableName="permissions" indexName="idx_action">
            <column name="action"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
