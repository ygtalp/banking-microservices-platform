<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-kyc-documents-table" author="banking-platform">
        <createTable tableName="kyc_documents">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- Customer Reference -->
            <column name="customer_id" type="BIGINT">
                <constraints nullable="false"
                           foreignKeyName="fk_kyc_documents_customer"
                           references="customers(id)"
                           deleteCascade="false"/>
            </column>

            <!-- Document Information -->
            <column name="document_type" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="document_number" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="issue_date" type="DATE"/>
            <column name="expiry_date" type="DATE"/>
            <column name="issuing_authority" type="VARCHAR(100)"/>

            <!-- Document Storage -->
            <column name="document_url" type="VARCHAR(500)"/>

            <!-- Verification Status -->
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="rejection_reason" type="VARCHAR(500)"/>
            <column name="verified_at" type="TIMESTAMP"/>
            <column name="verified_by" type="VARCHAR(100)"/>

            <!-- Audit Fields -->
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Indexes -->
        <createIndex tableName="kyc_documents" indexName="idx_kyc_customer_id">
            <column name="customer_id"/>
        </createIndex>

        <createIndex tableName="kyc_documents" indexName="idx_kyc_status">
            <column name="status"/>
        </createIndex>

        <createIndex tableName="kyc_documents" indexName="idx_kyc_document_type">
            <column name="document_type"/>
        </createIndex>

        <createIndex tableName="kyc_documents" indexName="idx_kyc_created_at">
            <column name="created_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
