<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="006-create-sanction-lists-table" author="claude">
        <createTable tableName="sanction_lists">
            <column name="sanction_id" type="VARCHAR(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="list_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="entity_type" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="sanctioned_name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="alias_names" type="TEXT"/>
            <column name="entity_id" type="VARCHAR(50)"/>
            <column name="national_id" type="VARCHAR(50)"/>
            <column name="passport_number" type="VARCHAR(50)"/>
            <column name="date_of_birth" type="DATE"/>
            <column name="place_of_birth" type="VARCHAR(100)"/>
            <column name="nationality" type="VARCHAR(50)"/>
            <column name="address" type="TEXT"/>
            <column name="country" type="VARCHAR(50)"/>
            <column name="sanction_type" type="VARCHAR(50)"/>
            <column name="sanction_reason" type="TEXT"/>
            <column name="listed_date" type="DATE"/>
            <column name="delisted_date" type="DATE"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="program" type="VARCHAR(100)"/>
            <column name="remarks" type="TEXT"/>
            <column name="source_url" type="VARCHAR(500)"/>
            <column name="last_refreshed_at" type="TIMESTAMP"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>

        <!-- Indexes for performance -->
        <createIndex tableName="sanction_lists" indexName="idx_sanction_list_name">
            <column name="list_name"/>
        </createIndex>
        <createIndex tableName="sanction_lists" indexName="idx_sanction_active">
            <column name="is_active"/>
        </createIndex>
        <createIndex tableName="sanction_lists" indexName="idx_sanction_name">
            <column name="sanctioned_name"/>
        </createIndex>
        <createIndex tableName="sanction_lists" indexName="idx_sanction_national_id">
            <column name="national_id"/>
        </createIndex>
        <createIndex tableName="sanction_lists" indexName="idx_sanction_passport">
            <column name="passport_number"/>
        </createIndex>
        <createIndex tableName="sanction_lists" indexName="idx_sanction_country">
            <column name="country"/>
        </createIndex>
        <createIndex tableName="sanction_lists" indexName="idx_sanction_entity_id">
            <column name="entity_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
