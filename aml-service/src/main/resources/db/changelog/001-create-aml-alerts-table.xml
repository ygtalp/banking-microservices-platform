<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="001-create-aml-alerts-table" author="claude">
        <createTable tableName="aml_alerts">
            <column name="alert_id" type="VARCHAR(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="alert_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="account_number" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="customer_id" type="VARCHAR(50)"/>
            <column name="transfer_reference" type="VARCHAR(50)"/>
            <column name="amount" type="DECIMAL(19,2)"/>
            <column name="currency" type="VARCHAR(3)"/>
            <column name="risk_score" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="risk_level" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="additional_data" type="TEXT"/>
            <column name="reviewed_by" type="VARCHAR(100)"/>
            <column name="reviewed_at" type="TIMESTAMP"/>
            <column name="notes" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>

        <createTable tableName="alert_reasons">
            <column name="alert_id" type="VARCHAR(50)">
                <constraints nullable="false" foreignKeyName="fk_alert_reasons_alert"
                             references="aml_alerts(alert_id)"/>
            </column>
            <column name="reason" type="VARCHAR(255)"/>
        </createTable>

        <createIndex tableName="aml_alerts" indexName="idx_alert_account">
            <column name="account_number"/>
        </createIndex>
        <createIndex tableName="aml_alerts" indexName="idx_alert_status">
            <column name="status"/>
        </createIndex>
        <createIndex tableName="aml_alerts" indexName="idx_alert_risk">
            <column name="risk_level"/>
        </createIndex>
        <createIndex tableName="aml_alerts" indexName="idx_alert_created">
            <column name="created_at"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
