<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="004-create-sepa-returns-table" author="claude">
        <createTable tableName="sepa_returns">
            <column name="return_id" type="VARCHAR(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="return_type" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)" defaultValue="INITIATED">
                <constraints nullable="false"/>
            </column>
            <column name="original_sepa_reference" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="original_end_to_end_id" type="VARCHAR(35)"/>
            <column name="original_transaction_id" type="VARCHAR(35)"/>
            <column name="return_reason_code" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="return_reason_description" type="TEXT"/>
            <column name="return_amount" type="DECIMAL(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="VARCHAR(3)" defaultValue="EUR">
                <constraints nullable="false"/>
            </column>
            <column name="debtor_name" type="VARCHAR(140)"/>
            <column name="debtor_iban" type="VARCHAR(34)"/>
            <column name="creditor_name" type="VARCHAR(140)"/>
            <column name="creditor_iban" type="VARCHAR(34)"/>
            <column name="initiated_by" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="initiated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="processed_at" type="TIMESTAMP"/>
            <column name="completed_at" type="TIMESTAMP"/>
            <column name="refund_sepa_reference" type="VARCHAR(50)"/>
            <column name="refund_transaction_id" type="VARCHAR(35)"/>
            <column name="refund_completed_at" type="TIMESTAMP"/>
            <column name="additional_information" type="TEXT"/>
            <column name="internal_notes" type="TEXT"/>
            <column name="has_errors" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="error_message" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Indexes for performance -->
        <createIndex tableName="sepa_returns" indexName="idx_return_original_sepa_ref">
            <column name="original_sepa_reference"/>
        </createIndex>
        <createIndex tableName="sepa_returns" indexName="idx_return_type">
            <column name="return_type"/>
        </createIndex>
        <createIndex tableName="sepa_returns" indexName="idx_return_status">
            <column name="status"/>
        </createIndex>
        <createIndex tableName="sepa_returns" indexName="idx_return_reason_code">
            <column name="return_reason_code"/>
        </createIndex>
        <createIndex tableName="sepa_returns" indexName="idx_return_debtor_iban">
            <column name="debtor_iban"/>
        </createIndex>
        <createIndex tableName="sepa_returns" indexName="idx_return_creditor_iban">
            <column name="creditor_iban"/>
        </createIndex>
        <createIndex tableName="sepa_returns" indexName="idx_return_initiated_at">
            <column name="initiated_at"/>
        </createIndex>
        <createIndex tableName="sepa_returns" indexName="idx_return_has_errors">
            <column name="has_errors"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
